# Stage Environment Variables
# Copy this file to .env.stage and update values as needed
# Configure these as GitHub Secrets for automated deployment

# Database Configuration
DATABASE_NAME=product_catalog_stage
DATABASE_USERNAME=stage_user
DATABASE_PASSWORD=changeme-stage-db-password-very-secure

# Application Configuration
APP_PORT=8080
JWT_SECRET=changeme-stage-secret-key-must-be-at-least-256-bits
JWT_EXPIRATION=43200

# MCP Server Configuration
MCP_SERVER_ENABLED=true
MCP_SERVER_NAME=product-catalog-mcp-server-stage
MCP_SERVER_VERSION=2.0.0-stage
MCP_SSE_ENDPOINT=/sse

# Stage Environment Features
SPRING_PROFILES_ACTIVE=stage,docker

# Optional: Nginx Configuration
NGINX_PORT=80
# NGINX_HTTPS_PORT=443

# Docker Resource Limits (Stage)
POSTGRES_MAX_MEMORY=768M
APP_MAX_MEMORY=768M
POSTGRES_MAX_CPUS=0.8
APP_MAX_CPUS=1.5