# Local Development Environment Variables
# Copy this file to .env.local and update values as needed

# Database Configuration
DATABASE_NAME=product_catalog_local
DATABASE_USERNAME=local_user
DATABASE_PASSWORD=local_password

# Application Configuration
APP_PORT=8080
JWT_SECRET=localDevSecretKey1234567890123456789012345678901234567890
JWT_EXPIRATION=3600

# MCP Server Configuration
MCP_SERVER_ENABLED=true
MCP_SERVER_NAME=product-catalog-mcp-server-local
MCP_SERVER_VERSION=2.0.0-local
MCP_SSE_ENDPOINT=/sse

# Local Development Features
SPRING_PROFILES_ACTIVE=local,docker
ENABLE_DEBUG_LOGGING=true
CORS_ALLOWED_ORIGINS=http://localhost:3000,http://localhost:8080,http://localhost:9000