# Environment Configuration for Product Catalog
# Copy this file to .env and customize the values for your environment

# Application Configuration
APP_PORT=8080
SPRING_PROFILES_ACTIVE=prod,docker

# Database Configuration
DATABASE_NAME=product_catalog
DATABASE_USERNAME=user
DATABASE_PASSWORD=change-me-in-production

# JWT Configuration (IMPORTANT: Change in production)
JWT_SECRET=change-me-production-secret-key-must-be-at-least-256-bits-long
JWT_EXPIRATION=86400

# MCP Server Configuration
MCP_SERVER_ENABLED=true
MCP_SERVER_NAME=product-catalog-mcp-server
MCP_SERVER_VERSION=2.0.0
MCP_SSE_ENDPOINT=/sse

# Connection Pool Settings
HIKARI_MAX_POOL_SIZE=15
HIKARI_MIN_IDLE=5
HIKARI_IDLE_TIMEOUT=300000
HIKARI_CONNECTION_TIMEOUT=20000
HIKARI_MAX_LIFETIME=1200000
HIKARI_LEAK_DETECTION=60000

# Logging Configuration
LOG_LEVEL=INFO

# Server Configuration
SERVER_PORT=8080
COOKIE_SECURE=true
SESSION_TIMEOUT=30m

# Actuator Configuration
ACTUATOR_ENDPOINTS=health,info,metrics,productmetrics,audit
ACTUATOR_HEALTH_DETAILS=when-authorized

# Async Processing
ASYNC_CORE_POOL_SIZE=2
ASYNC_MAX_POOL_SIZE=5
ASYNC_QUEUE_CAPACITY=100

# Monitoring (Optional)
PROMETHEUS_ENABLED=false
TRACING_SAMPLING=0.0

# Nginx Configuration (if using reverse proxy)
NGINX_PORT=80
NGINX_HTTPS_PORT=443

# Development Only (do not use in production)
# JWT_SECRET=dev-secret-key-1234567890123456789012345678901234567890

